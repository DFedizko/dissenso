generator client {
    provider = "prisma-client"
    output   = "../prisma/generated"
}

datasource db {
    provider = "postgresql"
}

model Article {
    id         String   @id @default(uuid())
    title      String
    coverImage String?
    content    String
    tags       String[]
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}
